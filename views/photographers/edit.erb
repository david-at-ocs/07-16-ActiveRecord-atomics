<body data_page_name="photogs page">
<h1>Edit Photographer</h1>

<h3>Choose Photographer to Edit</h3>
  <form action="/photographer/edited">
    <ul>
      <select name="photographer_id">
        <% @photographers.each do |photog| %>
          <li><option value="<%= photog.id %>"><%= photog.id %>. <%= photog.name %> -- Age: <%= photog.age %></option></li>
        <% end %>
      </select>
      <li><input type="text" size="30" placeholder="New name (leave blank to keep)" name="name"></li>
      <li><input type="text" size="30" placeholder="New age (leave blank to keep)" name="age"></li>
      <li><input type="submit" value="Change Photog Info"></li>
    </ul>
  </form>
</body>