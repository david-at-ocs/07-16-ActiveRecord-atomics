<header>
  <nav class="nav_container">
    <div id="hamburger" class="mobile">
      <img src="/menu.png">
    </div>
    <div id="mobileNav">
      <nav>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/albums">Albums</a></li>
          <li><a href="/albums/add">Add Albums</a></li>
          <li><a href="/albums/edit">Edit Albums</a></li>
          <li><a href="/albums/delete">Delete Albums</a></li>
        </ul>
      </nav>
      <div style="clear: both"></div>
    </div>
  </div>
</header>

<body data_page_name="albums page">
  <h1><%= @album.title %> Album</h1>
  <ul id="view_photo">
    <li><%= @album.description %></li>
    <li>Photos:</li>
    <ul>
      <% @album.photos.each do |a| %>
        <li><a href="/photos/<%= a.id %>"><%= a.title %></a></li>
      <% end %>
    </ul>
  </ul>
  
  <h3>Add photo to <%= @album.title %></h3>

  <form action="/albums/add_photo">
    <input type="hidden" size="30" name="id" value="<%= @album.id %>">
    <input type="submit" value="Add Photo to Album">
  </form>
</body>